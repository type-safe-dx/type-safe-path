{
  "name": "@kiyoshiro/type-safe-path",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.mjs",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build": "unbuild",
    "lint:check": "rome check .",
    "lint:fix": "rome format --write .",
    "test": "vitest",
    "test:e2e": "pnpm build && pnpm run --filter './e2e/fixtures/*' generate && vitest -c vitest.e2e.config.ts --run",
    "test:typecheck": "vitest typecheck",
    "test:coverage": "vitest --run --coverage",
    "prepublishOnly": "pnpm build",
    "release": "tsc --noEmit && pnpm run test --run && bumpp package.json && pnpm publish && changelogithub"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "rome format --write"
    ]
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "defu": "6.1.2",
    "fast-glob": "3.2.12",
    "jiti": "^1.17.1",
    "kleur": "^4.1.5",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@types/node": "18.13.0",
    "@vitest/coverage-c8": "0.28.5",
    "bumpp": "8.2.1",
    "changelogithub": "0.12.7",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "rome": "11.0.0",
    "typescript": "4.9.5",
    "unbuild": "1.1.2",
    "vitest": "0.28.5"
  },
  "packageManager": "pnpm@7.27.0"
}

{
  "name": "@kiyoshiro/type-safe-path",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": "dist/cli.mjs",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build": "unbuild",
    "lint:check": "rome check .",
    "lint:fix": "rome format --write .",
    "test": "vitest",
    "test:typecheck": "vitest typecheck",
    "test:coverage": "vitest --run --coverage",
    "prepublishOnly": "pnpm build",
    "release": "bumpp package.json && pnpm publish"
  },
  "lint-staged": {
    "*.{ts}": [
      "rome format --write"
    ]
  },
  "dependencies": {
    "jiti": "1.16.2",
    "kleur": "4.1.5",
    "sade": "1.8.1",
    "tiny-glob": "0.2.9"
  },
  "devDependencies": {
    "@types/node": "18.11.18",
    "bumpp": "8.2.1",
    "c8": "7.12.0",
    "husky": "^8.0.0",
    "lint-staged": "13.1.0",
    "rome": "11.0.0",
    "typescript": "4.9.4",
    "unbuild": "1.1.1",
    "vitest": "0.27.2"
  },
  "packageManager": "pnpm@7.25.0"
}
